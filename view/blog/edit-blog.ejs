<%- include('../admin-layout/header.ejs'); %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

  <h2>Edit BLog</h2>

  <form method="POST" action="/edit/blog/<%= user.id %>" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Title</label>
      <input type="text" name="blogTitle" class="form-control" value="<%= user.title %>">
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">description title</label>
      <input type="text" name="blogDes" class="form-control"
      value="<%= user.desTitle %>">
    </div>
    <div class="mb-3">
      <img src="/photos/<%= user.blogPhoto %>" width="200px" height="200px">
      <input type="file" name="editPhoto" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3">
    
      <textarea name="desc" rows="5" class="form-control"  required="required"><%= user.description %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
      
      </main>
        <%- include('../admin-layout/footer.ejs'); %>